{% extends "::layout.html.twig" %}

{% block carrusel %}
    <link rel="stylesheet" href="{{ asset('js/owl-carousel/owl.carousel.css') }}">
    <link rel="stylesheet" href="{{ asset('js/owl-carousel/owl.theme.css') }}">
    <script src="{{ asset('js/owl-carousel/owl.carousel.min.js') }}"></script>
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <style>
        #filaCarrusel {
            overflow-x: hidden;
        }

        #filaCarrusel, #filaProductos {
            background-color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row" id="filaCarrusel">
        <div class="col-sm-12">
            <div class="owl-carousel" id="carruselImagenes">
                {% for foto in fotos %}
                    <div>
                        <img src="{{ asset(foto) }}" alt="Imagen">
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row" id="filaProductos">
        <div class="col-sm-3">
            <h2>Novedades</h2>
            {% for novedad in novedades %}
                <div class="row">
                    <div class="col-sm-12">
                        <a href="#" title="{{ novedad.descripcion }}">
                            <img src="{{ asset(novedad.url) }}" alt="">
                        </a>
                        <a href="#"><h3>{{ novedad.marca }} {{ novedad.modelo }}</h3></a>
                        <h3>{{ novedad.precio }}&euro; <span class="glyphicon glyphicon-shopping-cart"></span></h3>
                    </div>
                </div>
                <hr>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $("#carruselImagenes").owlCarousel({
                items: 1,
                autoPlay: true
            });
        });
    </script>
{% endblock %}